{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <div class="row" style="margin: 20px 0 15px 0">
        <div class="col-md-6">
            <h2>{{ user.lastName }} {{ user.firstName }}</h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="{{ path('admin_users') }}" class="btn return">
                <i class="fa fa-arrow-left"></i>Retour à la liste
            </a>
        </div>
    </div>
    <table id="table-show" class="card">
        <tbody class="card-body">
        <tr>
            <th>Nom</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Prènom</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ user.address }}</td>
        </tr>
        <tr>
            <th>Numéro de téléphone</th>
            <td>{{ user.phoneNumber }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.mail }}</td>
        </tr>
        <tr>
            <th>
                <div class="row">
                    <div class="col-md-2">
                        <button style="margin-top: 20px" type="button" id="btn-edit" class="btn btn-light"><a href="{{ path('admin_edit_user', { 'id': user.id }) }}" class="card-link">Modifier</a></button>
                    </div>
                </div>
            </th>
        </tr>
        </tbody>
    </table>
{% endblock %}
