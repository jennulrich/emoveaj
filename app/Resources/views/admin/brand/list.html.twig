{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <div class="row" style="margin-bottom: 15px">
        <div class="col-md-6 h2-car-list" style="margin-top: 20px">
            <h2>Liste des marques</h2>
        </div>
        <div class="col-md-6 admin-add">
            <a href="{{ path('admin_add_brand') }}"><button type="button" class="btn add"><i class="fa fa-plus"></i> Ajouter une marque</button></a>
        </div>
    </div>
    <div class="card" style="padding: 15px; margin-bottom: 30px">
        <div class="row" id="margin-table">
            <div class="col-md-12">
                <table id="car" class="table table-bordered table-striped" width="100%" style="margin-top: 15px; font-size: 11pt">
                    <thead>
                    <tr>
                        <th>Identifiant</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for brand in brands %}
                        <tr>
                            <td style="vertical-align: middle">{{ brand.id }}</td>
                            <td style="vertical-align: middle">{{ brand.name }}</td>
                            <td>
                                <ul class="puce-none mb-0">
                                    <li>
                                        <a href="{{ path('admin_view_brand', { 'id': brand.id }) }}" class="action"> <i class="fa fa-eye"></i>Détail</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_edit_brand', { 'id': brand.id }) }}" class="action"><i class="fa fa-edit"></i>Modifier</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_delete_brand', { 'id': brand.id}) }}" class="action" data-toggle="modal" data-target="#{{ brand.id }}"><i class="fa fa-trash"></i>Supprimer</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Modal de confirmation de suppression -->
    {% for brand in brands %}
        <div class="modal fade" id="{{ brand.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <span>Êtes-vous sûr de vouloir supprimer cette news ?</span>
                    </div>
                    <div class="modal-footer">
                        <a href="{{ path('admin_delete_brand', {"id":brand.id}) }}" class="btn btn-fill btn-info text-uppercase btn-sm">Supprimer</a>
                        <button type="button" class="btn btn-fill btn-danger btn-sm text-uppercase" data-dismiss="modal">Annuler</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <!-- End Modal de confirmation de suppression -->
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#car').DataTable({
                "language": {
                    "search": "Recherche :"
                },
                "bLengthChange": false,
                "info": false
            });
        } );
    </script>
{% endblock %}
