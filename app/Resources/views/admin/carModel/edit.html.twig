{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <style>
        .add-title div label {
            width: 10%;
        }

        .add-title div input {
            width: 50%;
        }
    </style>
    <div class="row">
        <div class="col-md-6" style="margin-top: 20px; margin-bottom: 15px">
            <h2>Modifier un mod√®le Voiture</h2>
