{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <style>
        .add-title div label {
            width: 17%;
        }

        .add-title div input {
            width: 50%;
            padding-left: 5px;
        }
    </style>
    <div class="row">
        <div class="col-md-6" style="margin-top: 20px; margin-bottom: 15px">
            <h2>Modifier une voiture</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6"></div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="padding: 15px">
                <div class="form container-fluid">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="add-title">
                        {{ form_row(form.model) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.color) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.price) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.reference) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.matriculation) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.kilometers) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.serialNumber) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.image) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn add text-uppercase btnEdit" id="add-button">Modifier</button>
                            <a href="{{ path('admin_cars') }}" class="btn back-add text-uppercase">annuler</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
