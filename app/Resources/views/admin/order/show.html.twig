{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <a href="{{ path('order_index') }}"><button type="button" class="btn return"><i class="fa fa-arrow-left"></i>Retour Ã  la liste</button></a>

    <table id="table-show" class="card">
        <tbody class="card-body">
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if order.createdAt %}{{ order.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ order.comment }}</td>
            </tr>
            <tr>
                <th>Ispaid</th>
                <td>{% if order.isPaid %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
