{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <div class="row" style="margin-bottom: 15px">
        <div class="col-md-6 h2-car-list" style="margin-top: 20px;">
            <h2>Liste des clients</h2>
        </div>
        <div class="col-md-6 admin-add">
            <a href="{{ path('admin_add_user') }}"><button type="button" class="btn add"><i class="fa fa-plus"></i> Ajouter un client</button></a>
        </div>
    </div>
    <div class="card" style="padding: 15px; margin-bottom: 30px">
        <div class="row" id="margin-table">
            <div class="col-md-12">
                <table id="car" class="table table-bordered table-striped" width="100%" style="margin-top: 15px; font-size: 11pt">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Adresse</th>
                        <th>N° de téléphone</th>
                        <th>Email</th>
                        <th>N° de permis</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td style="vertical-align: middle">{{ user.lastName }}</td>
                        <td style="vertical-align: middle">{{ user.firstName }}</td>
                        <td style="vertical-align: middle">{{ user.birthDate|date('d-m-Y') }}</td>
                        <td style="vertical-align: middle">{{ user.address }}</td>
                        <td style="vertical-align: middle">{{ user.phoneNumber }}</td>
                        <td style="vertical-align: middle">{{ user.mail }}</td>
                        <td style="vertical-align: middle">{{ user.driveLicenceNb }}</td>
                        <td>
                            <ul class="puce-none mb-0">
                                <li>
                                    <a href="{{ path('admin_view_user', { 'id': user.id }) }}" class="action"> <i class="fa fa-eye"></i>Détail</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_edit_user', { 'id': user.id }) }}" class="action"><i class="fa fa-edit"></i>Modifier</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_delete_user', { 'id': user.id}) }}" class="action" data-toggle="modal" data-target="#{{ user.id }}"><i class="fa fa-trash"></i>Supprimer</a>
                                </li>
                            </ul>
                        </td>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#car').DataTable({
                "language": {
                    "search": "Recherche :"
                },
                "bLengthChange": false,
                "info": false
            });
        } );
    </script>
{% endblock %}
