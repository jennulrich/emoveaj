{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <div class="row" style="margin: 20px 0 15px 0">
        <div class="col-md-6">
            <h2>{{ car.model.nameModel }}</h2>
        </div>
        <div class="col-md-6 text-right">
            <a href="{{ path('admin_cars') }}" class="btn return">
                <i class="fa fa-arrow-left"></i>Retour à la liste
            </a>
        </div>
    </div>
    <table id="table-show" class="card">
        <tbody class="card-body">
        <tr>
            <th>Modèle</th>
            <td>{{ car.model.nameModel }}</td>
        </tr>
        <tr>
            <th>Couleur</th>
            <td>{{ car.color }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ car.price }}</td>
        </tr>
        <tr>
            <th>
                <div class="row">
                    <div class="col-md-2">
                        <button style="margin-top: 20px" type="button" id="btn-edit" class="btn btn-light"><a href="{{ path('admin_edit_car', { 'id': car.id }) }}" class="card-link">Modifier</a></button>
                    </div>
                </div>
            </th>
        </tr>
        </tbody>
    </table>
{% endblock %}
