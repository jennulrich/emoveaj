{% extends 'admin/layout-admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6" style="margin-top: 20px; margin-bottom: 15px">
            <h2>Ajouter un utilisateur</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6"></div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="padding: 15px">
                <div class="form container-fluid">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="add-title">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.birthDate) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.address) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.phoneNumber) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.mail) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.driveLicenceNb) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn add text-uppercase btnEdit" id="add-button">Ajouter</button>
                            <a href="{{ path('admin_users') }}" class="btn back-add text-uppercase">annuler</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
